<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.LotteCinema.domain.user.UserRepository">
  
  <insert id="signup" parameterType="com.LotteCinema.domain.user.User">
  	insert into 
  		user_mst
  	values(
  		0,
  		#{username},
  		#{password},
  		#{name},
  		#{phone},
  		#{email},
  		#{email_assent},
  		#{sms_assent},
  		now(),
  		now()
  	);
  </insert>
  
  <select id="usernameCheck" parameterType="String" resultType="Integer">
  	select
  		count(username)
  	from
  		user_mst
  	where
  		username = #{username};
  </select>
  
  <select id="selectPassword" parameterType="String" resultType="String">
  	select
  		password
  	from
  		user_mst
  	where
  		username = #{username};
  </select>
  
  <select id="loadUserByUsername" parameterType="String" resultType="com.LotteCinema.domain.user.User">
  	select
  		*
  	from
  		user_mst
  	where
  		username = #{username};
  </select>
  
  </mapper>
